<p id="notice"><%= notice %></p>

<h1>Assembleia</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope='col'>Distrito</th>
      <th scope='col'>Municipio</th>
      <th scope='col'>Nome presidente</th>
      <th scope='col'>Email</th>
      <th scope='col'>Telefone</th>
      <th scope='col'>Aderiu</th>
      <th scope='col'>Data</th>
      <th scope='col'>Votacao</th>
      <th scope='col'>Observacoes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assembleia.each do |assembleium| %>
      <tr>
        <td><%= assembleium.Distrito %></td>
        <td><%= assembleium.Municipio %></td>
        <td><%= assembleium.nome_presidente %></td>
        <td><%= assembleium.email %></td>
        <td><%= assembleium.telefone %></td>
        <td><%= assembleium.aderiu %></td>
        <td><%= assembleium.data %></td>
        <td><%= assembleium.votacao %></td>
        <td><%= assembleium.observacoes %></td>
        <td><%= link_to 'Ver', assembleium %></td>
        <td><%= link_to 'Editar', edit_assembleium_path(assembleium) %></td>
        <td><%= link_to 'Eliminar', assembleium, method: :delete, data: { confirm: 'Tem a certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>Importar</h3>
<%= form_tag import_assembleia_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload Assembleias" %>
<%end %>
<%= link_to 'New Assembleium', new_assembleium_path %>
